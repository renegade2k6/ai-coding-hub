/* ====== THEME: Enhanced Futuristic Neon / Glass ====== */
:root,
[data-theme="dark"] {
  --bg0: #03050b;          /* deeper space */
  --bg1: #0a1030;          /* indigo */
  --bg2: #0c1435;          /* mid tone */
  --panel: #0b1326;        /* glass base */
  --panel-2: #0f1b36;      /* hover */
  --panel-3: #12203d;      /* active */
  --ink: #f0f7ff;          /* enhanced main text */
  --muted: #a8bdd6;        /* improved secondary text */
  --accent: #00d4ff;       /* enhanced neon cyan */
  --accent-2: #b084ff;     /* enhanced neon violet */
  --accent-3: #ff6b9d;     /* neon pink */
  --ok: #00ff94;           /* enhanced success */
  --warn: #ffb84d;         /* enhanced warning */
  --danger: #ff5757;       /* enhanced danger */
  --chip: #111b35;         /* tag pill */
  --border: #1a3052;       /* enhanced card border */
  --border-light: #2a4066; /* lighter border */
  --shadow: 0 20px 70px rgba(0, 0, 0, .6), inset 0 1px 0 rgba(125, 249, 255, .08);
  --shadow-hover: 0 25px 80px rgba(0, 0, 0, .7), inset 0 1px 0 rgba(125, 249, 255, .12);
  --glow: 0 0 20px rgba(0, 212, 255, .3);
  --glow-strong: 0 0 30px rgba(0, 212, 255, .5);
  --neon-pulse: 0 0 15px #00d4ff, 0 0 30px rgba(0, 212, 255, 0.4);
  --border-radius-sm: 12px;
  --border-radius-md: 20px;
  --border-radius-lg: 25px;
  --border-radius-xl: 30px;
  --transition-smooth: all 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94);
}


  --panel-3: #eaf2ff;      /* light active */
  --ink: #0a1030;          /* dark text */
  --muted: #2a4060;        /* darker muted text for better contrast */
  --accent: #0077bb;       /* deeper cyan for better contrast */
  --accent-2: #7744cc;     /* deeper violet */
  --accent-3: #cc3366;     /* deeper pink */
  --ok: #008855;           /* deeper green */
  --warn: #cc7700;         /* deeper orange */
  --danger: #cc2222;       /* deeper red */
  --chip: #e0ebf5;         /* light tag */
  --border: #c5d9ed;       /* light border */
  --border-light: #d5e3f2; /* lighter border */
  --shadow: 0 10px 40px rgba(0, 0, 0, .1), inset 0 1px 0 rgba(255, 255, 255, .9);
  --shadow-hover: 0 15px 50px rgba(0, 0, 0, .15), inset 0 1px 0 rgba(255, 255, 255, 1);
  --glow: 0 0 15px rgba(0, 119, 187, .2);
  --glow-strong: 0 0 25px rgba(0, 119, 187, .3);
  --neon-pulse: 0 0 10px #0077bb, 0 0 20px rgba(0, 119, 187, 0.3);
}

/* Utility classes */
.hidden {
  display: none !important;
}

/* ====== Scroll Progress Bar ====== */
.scroll-progress-bar {
  position: fixed;
  top: 0;
  left: 0;
  width: 0%;
  height: 3px;
  background: linear-gradient(90deg, var(--accent), var(--accent-2), var(--accent-3));
  box-shadow: 0 0 15px var(--accent), 0 0 25px rgba(0, 212, 255, 0.5);
  z-index: 9999;
  transition: width 0.1s ease-out;
  border-radius: 0 3px 3px 0;
}

/* ====== Theme Toggle Button ====== */
.theme-toggle {
  position: fixed;
  bottom: 2rem;
  right: 2rem;
  width: 56px;
  height: 56px;
  border-radius: 50%;
  border: 2px solid rgba(0, 212, 255, 0.4);
  background: linear-gradient(135deg, rgba(0, 212, 255, 0.15), rgba(12, 20, 44, 0.95));
  color: var(--accent);
  font-size: 1.5rem;
  cursor: pointer;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s cubic-bezier(0.34, 1.56, 0.64, 1);
  backdrop-filter: blur(16px);
  box-shadow: 0 8px 24px rgba(0, 0, 0, 0.4);
  z-index: 1000;
}

.theme-toggle:hover {
  background: linear-gradient(135deg, rgba(0, 212, 255, 0.3), rgba(12, 20, 44, 1));
  border-color: var(--accent);
  transform: scale(1.1) rotate(180deg);
  box-shadow: 0 0 30px rgba(0, 212, 255, 0.6),
              0 8px 24px rgba(0, 0, 0, 0.5);
}



/* Neon pulsing animation */
@keyframes neon-pulse {
  0%, 100% {
    box-shadow: var(--neon-pulse);
    text-shadow: 0 0 8px currentColor;
  }
  50% {
    box-shadow: 0 0 25px #00d4ff, 0 0 40px rgba(0, 212, 255, 0.6);
    text-shadow: 0 0 12px currentColor;
  }
}

.neon-pulse {
  animation: neon-pulse 2s ease-in-out infinite;
}

* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

html, body {
  height: 100%;
  /* Solid background to avoid banding/lines */
  background: var(--bg1);
  color: var(--ink);
  font: 15px/1.6 Inter, ui-sans-serif, system-ui, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
  font-weight: 400;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  transition: background-color 0.2s ease;
}

/* Prevent white flash during loading */
body.header-loading,
body.footer-loading {
  background: var(--bg1) !important;
}

body {
  line-height: 1.6;
  scroll-behavior: smooth;
}

/* Enhanced focus states for accessibility */
a:focus,
button:focus,
input:focus,
select:focus,
textarea:focus,
[tabindex]:focus {
  outline: 2px solid #00d4ff;
  outline-offset: 2px;
  border-radius: 4px;
  box-shadow: 0 0 0 3px rgba(0, 212, 255, 0.3);
}

/* Better selection colors */
::selection {
  background: rgba(0, 212, 255, 0.2);
  color: white;
}

.container {
  max-width: 1440px;
  margin: 0 auto;
  padding: 0 20px;
  overflow: hidden; /* Prevent horizontal scrollbar on whole page */
}

/* Adjust header container for better navigation spacing */
header .container {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  flex-wrap: wrap;
  gap: 1rem;
  width: 100%;
  max-width: 100%;
}

/* Header and Navigation */
header {
  background: linear-gradient(135deg, rgba(8, 16, 35, .95) 0%, rgba(10, 18, 40, .95) 100%);
  border-bottom: 1px solid var(--border);
  padding: 1rem 0;
  position: sticky;
  top: 0;
  z-index: 100;
  backdrop-filter: blur(16px) saturate(180%);
  box-shadow: 0 8px 32px rgba(0, 0, 0, .4), 0 0 0 1px rgba(125, 249, 255, .1);
  height: auto;
  min-height: 80px;
  transition: all 0.2s ease;
  border-bottom: 1px solid rgba(125, 249, 255, .15);
}

header .container {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  flex-wrap: wrap;
  gap: 0.8rem;
  width: 100%;
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 1rem;
  min-height: 80px;
}

header h1 {
  font-size: clamp(22px, 4.5vw, 38px);
  margin: 0;
  letter-spacing: .2px;
  color: var(--ink);
  background: linear-gradient(45deg, #00d4ff, #00a8cc, #0088aa);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  text-shadow: 0 0 10px rgba(0, 212, 255, 0.2);
  font-weight: 700;
}

.header-logo-container {
  display: flex;
  gap: 14px;
  align-items: center;
}

.header-logo {
  width: 44px;
  height: 44px;
  border-radius: 12px;
  position: relative;
  isolation: isolate;
  background: linear-gradient(180deg,#0f1d3e,#0a1328);
  box-shadow: inset 0 0 0 1px rgba(0,212,255,.35);
}

/* Media query specifically for fixing the logo and navigation alignment */
@media (max-width: 950px) {
  header .container {
    flex-direction: column;
    align-items: center;
  }
  
  nav {
    width: 100%;
    overflow-x: auto;
    min-height: 48px;
    max-height: 48px;
  }
}

nav ul {
  display: flex;
  list-style: none;
  gap: 6px;
  flex-wrap: nowrap; /* Prevent wrapping */
  align-items: center;
  margin: 14px auto;
  justify-content: center;
  overflow-x: auto; /* Add horizontal scrolling if needed */
  padding: 6px 8px;
  min-width: min-content; /* Ensure navigation takes minimum space needed for content */
  min-height: 48px; /* Prevent jumping by maintaining consistent height */
  max-height: 48px; /* Fixed max height to prevent jumps */
  scrollbar-width: thin; /* For Firefox */
  -ms-overflow-style: -ms-autohiding-scrollbar; /* For IE/Edge */
  width: fit-content;
  background: rgba(10, 20, 40, 0.6);
  border-radius: 20px;
  border: 1px solid rgba(125, 249, 255, 0.1);
  backdrop-filter: blur(10px);
  box-shadow: inset 0 0 20px rgba(0, 0, 0, 0.3), 0 5px 15px rgba(0, 0, 0, 0.2);
  align-content: center;
}

nav ul::-webkit-scrollbar {
  height: 6px;
}

nav ul::-webkit-scrollbar-track {
  background: rgba(125, 249, 255, 0.05);
  border-radius: 3px;
}

nav ul::-webkit-scrollbar-thumb {
  background: rgba(125, 249, 255, 0.2);
  border-radius: 3px;
}

nav ul::-webkit-scrollbar-thumb:hover {
  background: rgba(125, 249, 255, 0.3);
}

nav li {
  flex-shrink: 0;
  white-space: nowrap; /* Prevent text wrapping */
  min-height: 36px; /* Ensure consistent item height */
  display: flex;
  align-items: center;
  justify-content: center;
  transition: transform 0.2s ease;
  height: auto;
  padding: 4px;
  position: relative;
}

nav li:hover {
  transform: translateY(-1px);
}

nav a {
  display: block;
  color: var(--muted);
  text-decoration: none;
  padding: 0.5rem 1rem;
  border-radius: 8px;
  transition: all 0.3s ease;
  font-weight: 500;
  white-space: nowrap; /* Prevent text wrapping */
  min-width: max-content; /* Ensure link takes minimum space needed for text */
  height: 36px;
  display: flex;
  align-items: center;
  min-width: 70px; /* More flexible minimum width for better responsiveness */
  justify-content: center;
}

nav a {
  display: flex;
  align-items: center;
  justify-content: center;
  color: var(--muted);
  text-decoration: none;
  padding: 0.65rem 1.2rem;
  border-radius: 18px;
  transition: all 0.3s ease;
  font-weight: 500;
  white-space: nowrap;
  position: relative;
  overflow: hidden;
  font-size: 0.95rem;
  letter-spacing: 0.2px;
  text-shadow: 0 1px 2px rgba(0, 0, 0, 0.3);
  min-height: 36px;
  box-sizing: border-box;
  text-align: center;
  line-height: 1.2;
}

nav a .icon {
  width: 16px;
  height: 16px;
  margin-right: 6px;
  display: inline-block;
  vertical-align: middle;
  flex-shrink: 0;
  min-width: 16px;
  min-height: 16px;
  background: currentColor;
  mask-size: contain;
  mask-repeat: no-repeat;
  mask-position: center;
  -webkit-mask-size: contain;
  -webkit-mask-repeat: no-repeat;
  -webkit-mask-position: center;
  color: inherit;
}

/* Hide SVG icons to prevent layout shifts */
nav a svg.icon {
  display: none !important; /* Hide SVG icons completely to prevent jumps */
}

nav a::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(0, 212, 255, 0.1), transparent);
  transition: left 0.5s ease;
}

nav a:hover {
  color: #ffffff;
  background: linear-gradient(135deg, rgba(125, 249, 255, 0.3), rgba(100, 220, 255, 0.2));
  transform: translateY(-3px) scale(1.02);
  box-shadow: 0 8px 30px rgba(0, 212, 255, 0.4), inset 0 0 15px rgba(125, 249, 255, 0.2);
  text-shadow: 0 0 10px rgba(125, 249, 255, 0.8);
  text-align: center;
  border-color: rgba(125, 249, 255, 0.6);
}

nav a:hover::before {
  left: 100%;
}

nav a.active {
  color: #ffffff;
  background: linear-gradient(135deg, rgba(0, 212, 255, 0.3), rgba(0, 168, 204, 0.3));
  box-shadow: 0 0 0 1px rgba(0, 212, 255, 0.4), 0 0 15px rgba(0, 212, 255, 0.3);
  text-shadow: 0 0 8px rgba(0, 212, 255, 0.7);
  animation: nav-active-pulse 3s ease-in-out infinite;
  text-align: center;
}

@keyframes nav-active-pulse {
  0%, 100% { box-shadow: 0 0 0 1px rgba(0, 212, 255, 0.4), 0 0 8px rgba(0, 212, 255, 0.3); }
  50% { box-shadow: 0 0 0 1px rgba(0, 212, 255, 0.6), 0 0 20px rgba(0, 212, 255, 0.5); }
}

/* Enhanced button styles */
.btn {
  display: inline-block;
  background: var(--panel-2);
  color: var(--ink);
  padding: 0.875rem 1.75rem;
  border-radius: 14px;
  text-decoration: none;
  font-weight: 600;
  transition: all 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  border: 1px solid var(--border);
  cursor: pointer;
  position: relative;
  overflow: hidden;
  box-shadow: 0 6px 20px rgba(0, 0, 0, 0.3);
}

.btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(0, 212, 255, 0.2), transparent);
  transition: left 0.5s ease;
}

.btn:hover {
  background: var(--accent);
  color: var(--bg1);
  transform: translateY(-3px) scale(1.05);
  border-color: var(--accent);
  box-shadow: var(--neon-pulse);
  animation: neon-pulse 1.5s ease-in-out infinite alternate;
}

.btn:hover::before {
  left: 100%;
}

/* Ensure proper spacing for navigation items */
@media (min-width: 769px) {
  nav ul {
    overflow-x: visible; /* No scrolling on larger screens */
    padding-bottom: 0; /* No scrollbar padding needed */
    flex-wrap: nowrap; /* Ensure no wrapping on larger screens */
  }
  
  nav li {
    flex-shrink: 1;
  }
}

/* Adjust nav for medium screens where overlap happens */
@media (max-width: 1200px) and (min-width: 951px) {
  nav ul {
    flex-wrap: nowrap; /* Prevent wrapping */
    overflow-x: auto; /* Add horizontal scrolling if needed */
    padding-bottom: 5px; /* Add space for scrollbar */
    justify-content: center;
  }
  
  nav li {
    flex-shrink: 0;
  }
  
  header .container {
    flex-direction: column; /* Centered stack */
    align-items: center;
  }
}

/* Adjust nav for medium screens where overlap happens */
@media (max-width: 1100px) and (min-width: 769px) {
  nav ul {
    justify-content: center;
    overflow-x: auto;
    padding-bottom: 5px;
    flex-wrap: nowrap; /* Ensure no wrapping on medium screens */
  }
  
  nav li {
    flex-shrink: 0;
  }
  
  header .container {
