    }
    
    .tool-card {
        break-inside: avoid;
        page-break-inside: avoid;
    }
    
    a[href]:after {
        content: " (" attr(href) ")";
        font-size: 0.8em;
        color: #666;
    }
}

/* Screen reader only content */
.sr-only {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border: 0;
}

/* Mobile performance optimizations */
@media (max-width: 768px) {
    /* Reduce complexity on mobile */
    .logo div[style*="conic-gradient"] {
        background: var(--accent) !important;
        filter: none !important;
    }
}

/* Preload critical resources hints */
.preload-hint {
    display: none;
}

/* Breadcrumb navigation for SEO */
.breadcrumb {
    background: rgba(255, 255, 255, 0.05);
    padding: 8px 0;
    font-size: 14px;
    width: 100%;
}

.breadcrumb .container {
    display: flex;
    align-items: center;
}

.breadcrumb ol {
    list-style: none !important;
    display: flex !important;
    flex-direction: row !important;
    align-items: center;
    margin: 0 !important;
    padding: 0 !important;
    width: auto;
}

.breadcrumb li {
    display: inline-flex !important;
    align-items: center;
    white-space: nowrap;
}

.breadcrumb li:not(:last-child)::after {
    content: '/';
    margin: 0 8px;
    color: #666;
    font-weight: normal;
}

.breadcrumb a {
    color: var(--accent);
    text-decoration: none;
    display: inline;
}

.breadcrumb a:hover {
    text-decoration: underline;
}

.breadcrumb li[aria-current="page"] {
    color: #ccc;
    display: inline;
}

/* Mobile breadcrumb */
@media (max-width: 768px) {
    .breadcrumb {
        font-size: 12px;
        padding: 6px 0;
    }
}

/* ====== Enhanced Search Filters ====== */

.search-filters {
    display: flex;
    flex-wrap: wrap;
    gap: 0.75rem;
    justify-content: center;
    margin: 1rem 0;
    padding: 0 1rem;
}

.filter-chip {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.6rem 1.2rem;
    background: rgba(12, 20, 44, .85);
    border: 1px solid rgba(125, 249, 255, .3);
    border-radius: 24px;
    color: var(--ink);
    font-size: 14px;
    font-weight: 500;
    cursor: pointer;
    transition: all 0.3s ease;
    backdrop-filter: blur(12px);
    box-shadow: 0 4px 15px rgba(0, 0, 0, .2);
    user-select: none;
}

.filter-chip:hover {
    background: rgba(14, 24, 52, .95);
    border-color: rgba(125, 249, 255, .5);
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(0, 212, 255, .3);
}

.filter-chip.active {
    background: linear-gradient(135deg, rgba(0, 212, 255, 0.2), rgba(176, 132, 255, 0.2));
    border-color: var(--accent);
    color: var(--accent);
    box-shadow: 0 0 20px rgba(0, 212, 255, .4), inset 0 0 10px rgba(0, 212, 255, .1);
}

.filter-chip .count {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    min-width: 24px;
    height: 24px;
    padding: 0 6px;
    background: rgba(0, 212, 255, 0.2);
    border-radius: 12px;
    font-size: 12px;
    font-weight: 600;
    color: var(--accent);
}

.filter-chip.active .count {
    background: rgba(0, 212, 255, 0.3);
    color: white;
}

.filter-chip .icon {
    font-size: 16px;
    line-height: 1;
}

/* Clear filters button */
.filter-chip.clear-filters {
    background: rgba(255, 87, 87, 0.1);
    border-color: rgba(255, 87, 87, 0.3);
    color: #ff5757;
}

.filter-chip.clear-filters:hover {
    background: rgba(255, 87, 87, 0.2);
    border-color: rgba(255, 87, 87, 0.5);
}

/* Active filters count indicator */
.active-filters-count {
    position: absolute;
    top: -8px;
    right: -8px;
    min-width: 20px;
    height: 20px;
    padding: 0 6px;
    background: var(--accent);
    border-radius: 10px;
    font-size: 11px;
    font-weight: 700;
    color: var(--bg0);
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 0 2px 8px rgba(0, 212, 255, .5);
}

/* Mobile responsive filters */
@media (max-width: 768px) {
    .search-filters {
        gap: 0.5rem;
        padding: 0 0.5rem;
    }
    
    .filter-chip {
        padding: 0.5rem 1rem;
        font-size: 13px;
    }
    
    .filter-chip .count {
        min-width: 20px;
        height: 20px;
        font-size: 11px;
    }
}

/* Filter results message */
.filter-results-message {
    text-align: center;
    margin: 1rem 0;
    padding: 0.75rem 1rem;
    background: rgba(0, 212, 255, 0.1);
    border-radius: 12px;
    color: var(--muted);
    font-size: 14px;
}

.filter-results-message strong {
    color: var(--accent);
    font-weight: 600;
}

/* ====== Mobile Optimizations ====== */
@media (max-width: 768px) {
  /* Hero section - reduce size on mobile */
  .hero {
    padding: 3rem 0 2rem 0;
    min-height: 280px;
  }

  .hero h2, .hero h1 {
    font-size: clamp(1.8rem, 6vw, 2.5rem);
  }

  /* Category cards - stack properly on mobile */
  .category-card {
    min-height: 180px;
    padding: 1.5rem 1.25rem;
  }

  .category-card h3 {
    font-size: 1.1rem;
    margin-right: 45px;
  }

  .category-card p {
    font-size: 0.9rem;
    margin-right: 35px;
  }

  .category-card::after {
    width: 38px;
    height: 38px;
    font-size: 1.1rem;
    top: 1rem;
    right: 1rem;
  }

  /* Featured ribbon - adjust for smaller screens */
  .featured-tool::before {
    font-size: 0.55rem;
    padding: 0.3rem 2rem;
  }

  /* Theme toggle - reposition on mobile */
  .theme-toggle {
    bottom: 1rem;
    right: 1rem;
    width: 48px;
    height: 48px;
    font-size: 1.3rem;
  }

  /* Quick actions - adjust size */
  .quick-action-btn {
    width: 28px;
    height: 28px;
    font-size: 0.8rem;
  }

  .quick-actions {
    top: 0.5rem;
    left: 0.5rem;
    gap: 0.35rem;
  }

  /* Tool card badges - wrap better */
  .tool-card-badges {
    gap: 0.3rem;
  }

  .badge {
    font-size: 0.7rem;
    padding: 0.3rem 0.6rem;
  }

  /* Navigation cards - improve mobile layout */
  .tool-card:has(h4 a) {
    padding: 0.875rem 1rem;
    gap: 0.75rem;
  }

  .tool-card:has(h4 a) h4 {
    font-size: 1rem;
  }

  .tool-card:has(h4 a) p {
    font-size: 0.85rem;
  }
}

/* Small mobile devices */
@media (max-width: 480px) {
  /* Hero - even smaller */
  .hero {
    padding: 2rem 0 1.5rem 0;
    min-height: 240px;
  }

  .hero h2, .hero h1 {
    font-size: 1.6rem;
  }

  /* Category cards - compact */
  .category-card {
    min-height: 160px;
    padding: 1.25rem 1rem;
  }

  .category-card h3 {
    font-size: 1rem;
  }

  .category-card p {
    font-size: 0.85rem;
  }

  /* Theme toggle - smaller */
  .theme-toggle {
    width: 44px;
    height: 44px;
    font-size: 1.2rem;
    bottom: 0.75rem;
    right: 0.75rem;
  }

  /* Quick actions - hide on very small screens to save space */
  .quick-actions {
    opacity: 1;
    transform: translateY(0);
  }
}
/* Theme Toggle Button */
.theme-toggle {
  background: linear-gradient(135deg, rgba(0, 212, 255, 0.15), rgba(176, 132, 255, 0.15));
  border: 1px solid rgba(0, 212, 255, 0.3);
  border-radius: 50%;
  width: 40px;
  height: 40px;
  cursor: pointer;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  transition: var(--transition-smooth);
  backdrop-filter: blur(8px);
  overflow: hidden;
}

.theme-toggle:hover {
  background: linear-gradient(135deg, rgba(0, 212, 255, 0.25), rgba(176, 132, 255, 0.25));
  border-color: rgba(0, 212, 255, 0.6);
  transform: scale(1.1);
  box-shadow: 0 8px 25px rgba(0, 212, 255, 0.3);
}

.theme-icon {
  position: absolute;
  font-size: 1.2rem;
  transition: var(--transition-smooth);
  opacity: 0;
  transform: scale(0.5) rotate(180deg);
}

[data-theme="dark"] .theme-icon-light,
:root .theme-icon-light {
  opacity: 1;
  transform: scale(1) rotate(0deg);
}

  opacity: 1;
  transform: scale(1) rotate(0deg);
}

[data-theme="dark"] .theme-icon-dark,
:root .theme-icon-dark {
  opacity: 0;
  transform: scale(0.5) rotate(-180deg);
}

  opacity: 0;
  transform: scale(0.5) rotate(-180deg);
}

