/* Category Cards */
.categories {
  padding: 1.5rem 0;
}

.categories .container {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
  gap: 1rem;
  overflow: visible; /* allow card glows/borders to render fully */
  background: transparent; /* match site background */
}

/* Ensure all tool sections and featured containers don't clip card borders/glows */
.content .container,
.featured .container {
  overflow: visible;
  background: transparent;
}

/* Category Cards - Redesigned with Icons and Numbers */
.category-card {
  background: linear-gradient(145deg, rgba(12, 20, 44, .75), rgba(8, 14, 30, .65));
  border: 2px solid rgba(125, 249, 255, .15);
  border-radius: 24px;
  padding: 2rem 2rem 2rem 1.75rem;
  text-align: left;
  transition: all 0.4s cubic-bezier(0.34, 1.56, 0.64, 1);
  opacity: 0;
  transform: translateY(20px);
  box-shadow: var(--shadow);
  position: relative;
  backdrop-filter: blur(16px);
  display: flex;
  flex-direction: column;
  gap: 0.75rem;
  min-height: 200px;
  overflow: visible;
}

/* Gradient border glow effect */
.category-card::before {
  content: "";
  position: absolute;
  inset: -2px;
  border-radius: 26px;
  background: conic-gradient(from 135deg,
    rgba(0, 212, 255, .25),
    rgba(176, 132, 255, .25),
    rgba(255, 107, 157, .15),
    rgba(0, 212, 255, .25));
  filter: blur(20px);
  opacity: 0;
  z-index: -1;
  transition: all 0.4s ease;
}

/* Number indicator - improved visibility */
.category-card::after {
  content: attr(data-number);
  position: absolute;
  top: 1.25rem;
  right: 1.25rem;
  width: 44px;
  height: 44px;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 1.3rem;
  font-weight: 900;
  color: var(--accent);
  background: linear-gradient(135deg, rgba(0, 212, 255, 0.15), rgba(0, 212, 255, 0.08));
  border: 2px solid rgba(0, 212, 255, 0.4);
  border-radius: 50%;
  opacity: 0.8;
  transition: all 0.5s cubic-bezier(0.34, 1.56, 0.64, 1);
  box-shadow: 0 4px 12px rgba(0, 212, 255, 0.2);
}

.category-card:hover {
