ced Micro-interactions */
.tool-card:hover .tag {
  transform: scale(1.08) translateY(-2px);
  box-shadow: 0 6px 20px rgba(0, 212, 255, 0.4);
  background: linear-gradient(135deg, rgba(0, 212, 255, 0.3), rgba(176, 132, 255, 0.3));
}

.tool-card:hover h4 {
  transform: translateY(-2px);
  text-shadow: 0 0 15px rgba(0, 212, 255, 0.6);
}

.tool-card:hover .btn {
  transform: translateY(-2px) scale(1.05);
  box-shadow: 0 8px 25px rgba(0, 212, 255, 0.4);
}

/* Category card enhanced hover */
.category-card:hover h3,
.category-card:hover h4 {
  transform: translateY(-2px);
  text-shadow: 0 0 12px rgba(0, 212, 255, 0.5);
}

/* Subnav enhanced hover */
.subnav a:hover {
  transform: translateY(-3px) scale(1.05);
  box-shadow: 0 8px 25px rgba(0, 212, 255, 0.2);
}

/* Back to top enhanced */
.back-to-top:hover {
  transform: translateY(-4px) scale(1.15);
  animation: gentle-bounce 0.6s ease-in-out;
}

@keyframes gentle-bounce {
  0%, 100% { transform: translateY(-4px) scale(1.15); }
  50% { transform: translateY(-6px) scale(1.18); }
}

/* Focus states for accessibility */
.theme-toggle:focus,
.btn:focus,
nav a:focus,
.subnav a:focus {
  outline: 2px solid var(--accent);
  outline-offset: 3px;
  box-shadow: 0 0 0 3px rgba(0, 212, 255, 0.3);
}

/* Loading state for buttons */
.btn.loading {
  position: relative;
  color: transparent;
  pointer-events: none;
}

.btn.loading::after {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  width: 20px;
  height: 20px;
  margin: -10px 0 0 -10px;
  border: 2px solid transparent;
  border-top: 2px solid currentColor;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* Improved text selection */
::selection {
  background: rgba(0, 212, 255, 0.3);
  color: white;
  text-shadow: none;
}

/* Enhanced scrollbar for webkit browsers */
::-webkit-scrollbar {
  width: 8px;
}

::-webkit-scrollbar-track {
  background: var(--bg2);
  border-radius: 4px;
}

::-webkit-scrollbar-thumb {
  background: linear-gradient(135deg, var(--accent), var(--accent-2));
  border-radius: 4px;
}

::-webkit-scrollbar-thumb:hover {
  background: linear-gradient(135deg, var(--accent-2), var(--accent));
}
