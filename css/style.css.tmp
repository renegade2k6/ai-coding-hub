  }
}

/* Hero Section */
/* Hero Section - Enhanced with Animations */
@keyframes hero-gradient {
  0%, 100% {
    background-position: 0% 50%;
  }
  50% {
    background-position: 100% 50%;
  }
}

@keyframes float-orbs {
  0%, 100% {
    transform: translate(0, 0) scale(1);
    opacity: 0.3;
  }
  50% {
    transform: translate(20px, -20px) scale(1.1);
    opacity: 0.5;
  }
}

.hero {
  padding: 4rem 0 3rem 0;
  text-align: center;
  position: relative;
  overflow: hidden;
  background: linear-gradient(135deg,
    rgba(0, 212, 255, 0.08) 0%,
    rgba(5, 10, 25, 0.95) 25%,
    rgba(8, 16, 35, 0.98) 50%,
    rgba(5, 10, 25, 0.95) 75%,
    rgba(176, 132, 255, 0.08) 100%);
  background-size: 200% 200%;
  animation: hero-gradient 15s ease infinite;
  border-bottom: 1px solid rgba(125, 249, 255, 0.2);
  margin-bottom: 1rem;
  min-height: 350px;
  display: flex;
  align-items: center;
}

.hero::before {
  content: '';
  position: absolute;
  top: -50%;
  left: -50%;
  width: 200%;
  height: 200%;
  background:
    radial-gradient(circle at 20% 30%, rgba(0, 212, 255, 0.15) 0%, transparent 40%),
    radial-gradient(circle at 80% 70%, rgba(176, 132, 255, 0.15) 0%, transparent 40%),
    radial-gradient(circle at 40% 80%, rgba(255, 107, 157, 0.1) 0%, transparent 35%);
  pointer-events: none;
  z-index: 0;
  animation: float-orbs 20s ease-in-out infinite;
}

.hero::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background:
    repeating-linear-gradient(
      0deg,
      transparent,
      transparent 2px,
      rgba(0, 212, 255, 0.03) 2px,
      rgba(0, 212, 255, 0.03) 4px
    );
  pointer-events: none;
  z-index: 0;
}

.hero .container {
  position: relative;
  z-index: 1;
}

@keyframes text-glow-pulse {
  0%, 100% {
    filter: drop-shadow(0 0 10px rgba(0, 212, 255, 0.4));
  }
  50% {
    filter: drop-shadow(0 0 20px rgba(0, 212, 255, 0.7));
  }
}

.hero h2, .hero h1 {
  font-size: clamp(2.2rem, 5vw, 3.5rem);
  margin-bottom: 1.2rem;
  background: linear-gradient(120deg, #00d4ff 0%, #00a8cc 40%, #b084ff 70%, #ff6b9d 100%);
  background-size: 200% auto;
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  font-weight: 800;
  letter-spacing: -0.02em;
  line-height: 1.2;
  animation: text-glow-pulse 3s ease-in-out infinite;
  font-weight: 700;
  letter-spacing: -0.5px;
  line-height: 1.2;
  position: relative;
  display: inline-block;
}

.hero h2::after, .hero h1::after {
  content: '';
  position: absolute;
  bottom: -10px;
  left: 50%;
  transform: translateX(-50%);
  width: 80px;
  height: 3px;
  background: linear-gradient(90deg, #00d4ff, #b084ff);
  border-radius: 2px;
  box-shadow: 0 0 15px rgba(0, 212, 255, 0.4);
}

.hero p {
