/* Buttons */
.btn {
  display: inline-block;
  background: linear-gradient(135deg, rgba(0, 212, 255, 0.2), rgba(176, 132, 255, 0.2));
  color: #ffffff;
  padding: 0.875rem 1.75rem;
  border-radius: 25px;
  text-decoration: none;
  font-weight: 600;
  transition: all 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  border: 1px solid rgba(0, 212, 255, .4);
  cursor: pointer;
  text-align: center;
  position: relative;
  backdrop-filter: blur(12px);
  overflow: hidden;
  box-shadow: 0 8px 30px rgba(0, 212, 255, 0.2), inset 0 1px 0 rgba(255, 255, 255, 0.15);
  text-shadow: 0 1px 3px rgba(0, 0, 0, 0.4);
  letter-spacing: 0.5px;
}
.btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
  transition: left 0.5s ease;
}
.btn:hover {
  background: linear-gradient(135deg, rgba(0, 212, 255, 0.4), rgba(176, 132, 255, 0.4));
  color: white;
  border-color: rgba(0, 212, 255, 0.9);
  transform: translateY(-4px) scale(1.05);
  box-shadow: 0 15px 45px rgba(0, 212, 255, 0.35), inset 0 1px 0 rgba(255, 255, 255, 0.3);
  text-shadow: 0 0 12px rgba(255, 255, 255, 0.8);
}

.btn:active {
  transform: translateY(-2px) scale(1.02);
  box-shadow: 0 8px 25px rgba(0, 212, 255, 0.4);
}
.btn:hover::before {
  left: 100%;
}

